{
  "compilerOptions": {
    "rootDir": "./src",
    "sourceMap": true,
    "target": "es2015",
    "module": "commonjs",
    "jsx": "react",
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationMap": true,
    "declarationDir": "./dist",
    "outDir": "./dist",
    "lib": [
      "ES2015",
      "DOM"
    ],
  },
  "files": [
    "src/index.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
}
